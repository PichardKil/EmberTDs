<div class="card space">
  <div class="card-header bg-primary text-light">Notes</div>
  <div class="card-body">
    <Textarea
      @type = "text"
      @value = {{this.content}}
        oninput={{action "update"}}
    />
    <div class="alert {{this.style}}" role="alert">
      Nombre de caract√®res restants : {{this.size}}
    </div>
    <div class="alert alert-primary" role="alert">
        {{this.info}}
    </div>
    <button type="button" {{on "click" this.save}}>Save</button>
    <button type="button" {{on "click" this.clear}}>Clear</button>
  </div>
</div>

