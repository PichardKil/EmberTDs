{{page-title "Add"}}

<form class="ui large form" >
  <div class="twelve wide stretched column">
    <div class="ui segment">
      <div  class="ui one column grid">
        <div class="column">
          <div class="ui attached segment">Ajout d'une section</div>
          <div class="ui stacked segment">
          <div class="field">
            <Input @value={{@model.name}} placeholder="Entrez le nom de la section" class="form-control"/>
          </div>

          <div class="field">
            <Input @value={{@model.description}} placeholder="Entrez le descriptif de la section" class="form-control"/>
          </div>


          <div class="ui attached teal segment">
            <button {{ action "save" @model }} class="ui teal button">Enregistrer</button>
            <LinkTo @route="sections" class="ui teal basic button">Annuler</LinkTo>
          </div>

        </div>
      </div>
    </div>
  </div>

</form>



{{outlet}}